<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/recorderFragment">

    <fragment
        android:id="@+id/recorderFragment"
        android:name="com.example.samplescreenrecorder.ui.RecorderFragment"
        android:label="fragment_recorder"
        tools:layout="@layout/fragment_recorder" >
        <action
            android:id="@+id/action_recorderFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.samplescreenrecorder.ui.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>